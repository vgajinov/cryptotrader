#timeCombo {
    color: rgb(255,180,0);
    border: 1px solid rgb(255,127,0);
    selection-color: rgb(255,255,255);
    selection-background-color: rgb(255,127,0);
    text-align: right;
}
#timeCombo QAbstractItemView {
    border: 1px solid rgb(255,127,0);
    background-color: rgb(0,0,0);
    color: rgb(255,180,0);
}