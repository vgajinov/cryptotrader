QComboBox {
    background-color: rgb(0, 0, 0);
    padding: 2px 10px 2px 10px;
    font: normal 14px;
}

/* hide drop-down arrow */

QComboBox::drop-down {
    height: 0px;
    width: 0px;
    border: none;
}


QComboBox QAbstractItemView {
    background-color: rgb(0,0,0);
    selection-background-color: rgb(96,96,96);
}

