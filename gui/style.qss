/* LineEdit
--------------------------------------------------
*/
QLineEdit {
    background-color: rgb(0, 0, 0);
    border: 1px solid rgb(255,255,255,200);
    padding: 3px 3px 3px 3px;
}

QLineEdit#disabledInput {
    background-color: rgb(0, 0, 0);
    border: none;
    padding: 3px 3px 3px 0px;
    color: rgb(167,174,186,100);
}


/* Labels
--------------------------------------------------
*/
QLabel {
    color: white;
}

QLabel#grayedLabel {
    color: rgb(167,174,186,100);
}

QLabel#totalLabel {
    margin: 5px 0px 5px 0px;
}


/* Buttons
--------------------------------------------------
*/
QPushButton#limitBuyButton {
    background-color: rgb(0,255,0,180);
    font: bold 16px;
}

QPushButton#limitSellButton {
    background-color: rgb(255,0,0,180);
    font: bold 16px;
}

QPushButton#marketBuyButton {
    background-color: rgb(0,255,0,180);
    font: bold 16px;
}

QPushButton#marketSellButton {
    background-color: rgb(255,0,0,180);
    font: bold 16px;
}


QPushButton#cancelButton {
    background-color: rgb(0,0,0,180);
    color: red;
    border-radius: 4px;
    border: 1px solid rgb(255,0,0);
    margin-top: 4px;
    margin-bottom: 4px;
    margin-right: 3px;
}


/* Table
--------------------------------------------------
*/
QTableWidget {
    background-color: rgb(0,0,0);
    alternate-background-color: rgb(167,174,186,10);
    margin: 0px;
}

QTableView {
    border: none;
}

QTableView::item {
    background-color: rgb(0,0,0);
}

QTableView::item:alternate {
    background: rgb(167,174,186,10);
}

QTableView::item::selected {
    background-color: rgb(0,0,0);
    text-decoration: none;
    outline: none;
}

QTableView::item::selected:alternate {
    background-color: rgb(167,174,186,10);
    text-decoration: none;
    outline: none;
}


QHeaderView::section {
    font: bold;
    color: rgb(167,174,186,150);
    background-color: rgb(0,0,0);
    border: none;
    height: 25px;
    border-bottom: 1px solid white;
}


