
* {
    color: white;
}

QMainWindow {
    background-color: rgb(0, 0, 0);
    color: white;
}



/* ComboBox
--------------------------------------------------
*/
QComboBox {
    background-color: rgb(0, 0, 0);
    padding: 2px 10px 2px 10px;
    font: normal 14px;
}

QComboBox::drop-down {
    height: 0px;
    width: 0px;
    border: none;
}

QComboBox QAbstractItemView {
    background-color: rgb(0,0,0);
    selection-background-color: rgb(167,174,186,50);
}

/* this doesn't work */
QComboBox QAbstractItemView::item:hover {
    text-decoration: none;
}




#exchangeCombo {
    color: rgb(127,0,175);
    border: 1px solid rgb(127,0,175);
}

#exchangeCombo QAbstractItemView {
    color: rgb(127,0,175, 200);
    border: 1px solid rgb(127,0,175, 150);
    selection-background-color: rgb(0,0,0);
    text-decoration: none;
    outline: 0px;
}

